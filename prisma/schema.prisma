generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Utilizador {
  id              Int               @id @default(autoincrement())
  nome            String            @db.VarChar(255)
  genero          Genero            @relation(fields: [generoId], references: [id])
  dataNascimento  DateTime
  telefone        Telefone          @relation(fields: [telefoneId], references: [id])
  email           String?           @db.VarChar(255)
  palavra_passe   String            @db.VarChar(255)
  dataCadastro    DateTime          @default(now())
  grupoUtilizador GrupoUtilizadores @relation(fields: [grupoUtilizadorId], references: [id])

  generoId          Int        @unique
  telefoneId        Int        @unique
  grupoUtilizadorId Int        @unique
  Documento         Documento?
  Perfil            Perfil?
}

model Perfil {
  id           Int        @id @default(autoincrement())
  bio          String?    @db.VarChar(255)
  utilizador   Utilizador @relation(fields: [utilizadorId], references: [id])
  utilizadorId Int        @unique
}

model GrupoUtilizadores {
  id         Int         @id @default(autoincrement())
  nome       String      @db.VarChar(255)
  descricao  String      @db.VarChar(255)
  Utilizador Utilizador?
  Permissoes Permissoes?
}

model Permissoes {
  id      Int               @id @default(autoincrement())
  grupo   GrupoUtilizadores @relation(fields: [grupoUtilizadoresId], references: [id])
  nivel   String            @db.VarChar(255)
  recurso String            @db.VarChar(255)

  grupoUtilizadoresId Int @unique
}

model Documento {
  id               Int          @id @default(autoincrement())
  titulo           String       @db.VarChar(255)
  conteudo         String       @db.VarChar(255)
  Categoria        String       @db.VarChar(255)
  utilizador       Utilizador   @relation(fields: [utilizadorId], references: [id])
  dataCriacao      DateTime     @default(now())
  dataActualizacao DateTime     @updatedAt
  departamento     Departamento @relation(fields: [departamentoId], references: [id])
  status           Status       @relation(fields: [statusId], references: [id])

  utilizadorId   Int        @unique
  departamentoId Int        @unique
  statusId       Int        @unique
  Auditoria      Auditoria?
}

model Telefone {
  id             Int         @id @default(autoincrement())
  numeroTelefone String      @db.VarChar(255)
  Utilizador     Utilizador?
}

model Status {
  id        Int        @id @default(autoincrement())
  descricao String     @db.VarChar(255)
  Documento Documento?
}

model Genero {
  id          Int         @id @default(autoincrement())
  denominacao String      @db.VarChar(255)
  Utilizador  Utilizador?
}

model Departamento {
  id        Int        @id @default(autoincrement())
  nome      String     @db.VarChar(255)
  descricao String     @db.VarChar(255)
  Documento Documento?
}

model Auditoria {
  id        Int       @id @default(autoincrement())
  documento Documento @relation(fields: [documentoId], references: [id])
  alteracao String    @db.VarChar(255)
  data      DateTime  @default(now())

  documentoId Int @unique
}
